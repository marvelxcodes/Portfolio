---
import IntroSection from "@layouts/IntroSection.astro";
import PageLayout from "@layouts/PageLayout.astro";

import Header from "@components/Header.astro";
import SocialMediaIcons from "@components/SocialMedia.astro";
import Button from "@components/Button.astro";
import Link from "@components/Link.astro";
import Logo from "@components/Logo.astro";

import GithubIcon from "@icons/GithubIcon.astro";
import InstagramIcon from "@icons/InstagramIcon.astro";
import MailIcon from "@icons/MailIcon.astro";
import LinkedinIcon from "@icons/LinkedinIcon.astro";
import TwitterIcon from "@icons/TwitterIcon.astro";
import ProfilePicture from "@components/ProfilePicture.astro";
---

<PageLayout>
	<Header>
		<Link href='/blog'>
			<p style='color:white;font-weight: 600;font-size: 1.2rem;'>Blog</p>
		</Link>
		<Logo />
	</Header>
	<SocialMediaIcons>
		<GithubIcon />
		<InstagramIcon />
		<LinkedinIcon />
		<TwitterIcon />
		<MailIcon />
	</SocialMediaIcons>
	<IntroSection>
		<div class='section'>
			<h1>Rama Krishnan</h1>
			<h2>You may call me <code>@marvelxcodes</code></h2>
			<p>I'm a Teenager | Developer | Tech Enthusiast</p>
			<div>
				<Link href=''>
					<Button variant='primary'>My Work</Button>
				</Link>
				<Button variant='outline'>My Journey</Button>
			</div>
		</div>
		<div class='section'>
			<ProfilePicture />
		</div>
	</IntroSection>
</PageLayout>

<style lang='scss'>
	body {
		background-color: var(--primary-color);
	}

	// IntroSection Styles

	h1 {
		color: white;
		font-size: 3rem;
	}

	h2 {
		font-weight: 300;
		font-size: 1.2rem;
		color: white;
	}

	code {
		color: var(--accent-color);
	}

	p {
		color: white;
		font-size: 1rem;
		font-weight: 200;
	}

	.section {
		width: 50%;
		height: 100%;

		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
	}

	.profilepicture {
		height: 20rem;
		width: 20rem;

		border: 1px solid white;
		border-radius: 1rem;
	}

	@media (max-width: 1200px) {
		.section {
			width: 100%;
			height: 50%;
		}
	}

	// IntroSection Styles
</style>
